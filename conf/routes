# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                     controllers.Application.index
GET     /about.html           controllers.Application.about
GET     /contact.html         controllers.Application.contact

GET     /domain               controllers.DomainController.domain
GET     /domain/alias         controllers.DomainController.alias

GET     /alias                controllers.AliasController.alias
GET     /alias/catchall       controllers.AliasController.catchAll
GET     /alias/common         controllers.AliasController.common
GET     /alias/cross          controllers.AliasController.crossDomain

GET     /user                 controllers.UserController.user
GET     /user/edit            controllers.UserController.edituser


# Map static webjar resources
GET     /webjars/*file        controllers.WebJarAssets.at(file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file         controllers.Assets.at(path="/public", file)
